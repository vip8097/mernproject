<!DOCTYPE html>
<html lang="en">
<head>
    {{>header}}

<body>
    <!-- Navbar section Start -->
    {{>navbar}}
    <!-- Navbar section End -->

    <!-- form section start -->
    <section class="main_heading my-5 pt-5">
        <div class="text-center">
            <h1 class="display-4"> Employee Registration Form</h1>
            <hr class="w-25 mx-auto" />
        </div>

        <div class="container">
            <div class="row my-5">
                <div class="col-md-4 col-10 col-xxl-4 mx-auto">

                    <form action="/register" method="POST">
                        <div class="mb-3">
                            <input type="text" class="form-control" id=" firstname" required name="firstname"
                                placeholder="First Name*">
                        </div>
                        <div class="mb-3">
                            <input type="text" class="form-control" id="lastname" required name="lastname"
                                placeholder="Last Name*">
                        </div>
                        <div class="mb-3">
                            <input type="email" class="form-control" id="email" required name="email" placeholder="Your Email*">
                        </div>
                        <div class="mb-3">
                            <label class="pr-4"> Gender </label>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" required name="gender" id="male"
                                    value="male">
                                <label class="form-check-label" for="inlineRadio1">Male</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" required name="gender" id="female" value="female">
                                <label class="form-check-label" for="inlineRadio2">Female</label>
                            </div>
                        </div>
                        <div class="mb-3">
                            <input type="tel" class="form-control" id="phone" required name="phone" maxlength="10" placeholder="Your Phone*" >
                        </div>
                        <div class="mb-3">
                            <input type="tel" class="form-control" id="age" required name="age" placeholder="Enter Your Age*">
                        </div>
                        <div class="mb-3">
                            <input type="password" class="form-control" id="password" required name="password" placeholder="Password*">
                        </div>
                        <div class="mb-3">
                            <input type="password" class="form-control" id="confirmpassword" required name="confirmpassword" placeholder="Confirm Password*" >
                        </div>
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button class="btn btn-primary me-md-2" type="submit" value="Register">Register</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <!-- form section End -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
</body>

</html>
