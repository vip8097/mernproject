<!doctype html>
<html lang="en">

<head>
    {{>header}}
</head>

<body>
    <!-- Navbar section Start -->
    {{>navbar}}
    <!-- Navbar section End -->

    <section class="main_login my-5 pt-5">
        <div class="container mt-5 pt-5">
            <div class="row">
                <div class="col-12 col-sm-8 col-md-6 m-auto">
                    <div class="card border-0 shadow">
                        <div class="card-body">
                            <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="currentColor"
                                class="bi bi-person-circle mx-auto d-block" viewBox="0 0 16 16">
                                <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
                                <path fill-rule="evenodd"
                                    d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z" />
                            </svg>
                            <form action="/login" method="POST">
                                <input type="email" name="email" id="eamil" class="form-control my-4 py-2"placeholder="Email" required>
                                <input type="password" name="password" id="password" class="form-control my-4 py-2" placeholder="Password" required>

                                <div class="text-center mt-3">
                                    <button class="btn btn-primary me-md-2" type="submit"value="Register">Login</button>
                                </div>
                            </form>
                            
                        </div>
                    </div>
                    <a href="/register" class="nav-link"> Create an account</a>
                </div>
            </div>
        </div>
    </section>

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>


</body>

</html>
